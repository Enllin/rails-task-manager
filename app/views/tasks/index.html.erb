<div style="background-color: silver">
  <ol>
  <% @tasks.each do |task|%>
    <li>
      <%= link_to(task.title, task_path(task)) %>
      <%= link_to "Delete",
        task_path(task),
        data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
      %>
    </li>
  <% end  %>
  <ol>
</div>

<h1><%= link_to("Create a new task", new_path(@task)) %></h1>
